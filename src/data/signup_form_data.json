[
  {
    "label": "Creator",
    "id": "creator",
    "steps": {
      "1": {
        "fields": [
          {
            "name": "email",
            "children": "Email Address",
            "rules": {
              "required": "Email address is required",
              "pattern": {
                "value": "/^[A-Z0-9._%+-]+@[A-Z0-9.-]+.[A-Z]{2,}$/i",
                "message": "invalid email address"
              }
            }
          },
          {
            "name": "password",
            "type": "password",
            "children": "Password",
            "rules": {
              "required": "Password is required",
              "minLength": {
                "value": 6,
                "message": "Password must be at least 6 characters"
              }
            }
          }
        ]
      },
      "2": {
        "title": "Tell us a little bit about you and your podcast",
        "fields": [
          {
            "name": "firstName",
            "children": "First Name",
            "rules": {
              "required": "First name is required"
            }
          },
          {
            "name": "lastName",
            "children": "Last Name",
            "rules": {
              "required": "Last name is required"
            }
          },
          {
            "name": "bio",
            "children": "Bio",
            "rules": {
              "required": "Bio is required"
            }
          },
          {
            "name": "podcastName",
            "children": "Podacast Name (optional)"
          },
          {
            "name": "podcastUrl",
            "type": "url",
            "children": "Link To Podcast (optional)"
          }
        ]
      },
      "3": {
        "title": "What is your goal?",
        "fields": [
          {
            "name": "goals",
            "as": "radio",
            "options": [
              "Finding work",
              "Monetising my podcast",
              "Pitching and commissions"
            ],
            "rules": {
              "required": "A goal is required"
            }
          }
        ]
      },
      "4": {
        "title": "What are your interests? (select up to 3)",
        "fields": [
          {
            "name": "interests",
            "as": "checkbox",
            "max": "3",
            "options": [
              "Technology & Gadgets",
              "Health & Fitness",
              "Finance & Investing",
              "Education & Learning",
              "Travel & Adventure",
              "Food & Cooking",
              "Fashion & Beauty",
              "Art & Design",
              "Science & Nature",
              "Home & Garden",
              "Parenting & Family",
              "Gaming & Esports",
              "Cars & Motorcycles",
              "History & Culture",
              "Politics & Current Events",
              "Literature & Books",
              "Personal Development",
              "Social Justice & Activism",
              "Spiritulality & Religion",
              "Environmental Issues",
              "Business & Entrepreneurship",
              "Relationships & Dating",
              "Mental Health & Wellness",
              "Hobbies & Crafts",
              "Pet Care & Animal Lovers",
              "DIY & Home Improvement",
              "Entertainment",
              "Sports & Outdoor Activities"
            ]
          }
        ]
      }
    }
