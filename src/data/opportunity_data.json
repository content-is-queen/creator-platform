{
  "job": {
    "label": "Job",
    "description": "A piece of work, especially a specific task done as part of the routine of one's occupation or for an agreed price",
    "fields": [
      {
        "name": "title",
        "as": "select",
        "options": [
          "Host",
          "Audio Editor",
          "Producer",
          "Voiceover Artist",
          "Sound Designer",
          "Production Assistant",
          "Audience Development",
          "Executive Producer",
          "Other"
        ],
        "children": "Title/Role"
      },
      {
        "name": "company",
        "type": "text",
        "children": "Company/Organisation Name"
      },
      {
        "name": "description",
        "as": "textarea",
        "children": "Description"
      },
      {
        "name": "skills",
        "type": "checkbox",
        "children": "Skills Required",
        "options": ["Editing", "Scriptwriting", "Mixing"]
      },
      {
        "name": "experience",
        "as": "select",
        "children": "Experience Level",
        "options": ["Entry-level", "Mid-level", "Senior", "Expert"]
      },
      {
        "name": "duration",
        "as": "select",
        "children": "Duration",
        "options": ["One-off", "Fixed-term", "Ongoing"]
      },
      {
        "name": "location",
        "as": "select",
        "children": "Location",
        "options": ["Remote", "Specific Location(s)", "Flexible"]
      },
      {
        "name": "compensation",
        "as": "select",
        "children": "Compensation",
        "options": ["Fixed Rate", "Range", "To be discussed"]
      }
    ]
  },
  "pitch": {
    "label": "Pitch",
    "description": "An introductory presentation that provides a quick summary of yourself.",
    "fields": [
      { "name": "project", "type": "text", "children": "Project Title" },
      {
        "name": "description",
        "as": "textarea",
        "children": "Description"
      },
      {
        "name": "target",
        "as": "select",
        "children": "Target Audience",
        "options": ["Women", "Millenials", "Sports Fans", "Other"]
      },
      {
        "name": "format",
        "as": "select",
        "children": "Audio Format",
        "options": ["Podcast", "Audiobook", "Radio Show", "Other"]
      },
      {
        "name": "duration",
        "type": "text",
        "children": "Length/Duration",
        "options": ["30 min episodes", "2-hour audiobook"]
      },
      {
        "name": "budget",
        "as": "select",
        "children": "Budget",
        "options": ["Fixed", "Range", "To be discussed"]
      },
      {
        "name": "submission",
        "type": "checkbox",
        "children": "Submission Details",
        "options": ["Summary", "Script Sample", "Audio Sample"]
      }
    ]
  },
  "campaign": {
    "label": "Advertising Campaign",
    "description": "An advertising campaign is a series of advertisement messages that share a single idea",
    "fields": [
      { "name": "name", "type": "text", "children": "Campaign Name" },
      { "name": "brand", "type": "text", "children": "Brand/Product" },
      {
        "name": "goals",
        "as": "select",
        "children": "Campaign Goals",
        "options": [
          "Brand Awareness",
          "Product Sales",
          "Event Promotion",
          "Other"
        ]
      },
      {
        "name": "target",
        "as": "select",
        "children": "Target Demographic",
        "options": []
      },
      {
        "name": "budget",
        "as": "select",
        "children": "Budget",
        "options": ["Fixed", "Range", "To be discussed"]
      },
      { "name": "duration", "options": ["1 month", "3 months", "Custom"] },
      {
        "name": "format",
        "type": "select",
        "children": "Ad Format",
        "options": []
      },
      {
        "name": "requirements",
        "as": "textarea",
        "children": "Creative Requirements"
      }
    ]
  }
}
