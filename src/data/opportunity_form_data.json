{
  "job": {
    "label": "Job",
    "description": "Post freelance, full-time, or contract audio jobs. Find skilled audio professionals to join your team or tackle your next project.",
    "fields": [
      {
        "name": "title",
        "type": "text",
        "children": "Title"
      },
      {
        "name": "description",
        "as": "textarea",
        "children": "Description"
      },
      {
        "name": "category",
        "as": "select",
        "options": [
          "Podcast Production",
          "Audio Editing",
          "Voiceover",
          "Scriptwriting",
          "Sound Design",
          "Music Composition",
          "Podcast Advertising",
          "Other"
        ],
        "children": "Category"
      },
      {
        "name": "contractType",
        "as": "select",
        "children": "Contract Type",
        "options": ["Freelance", "Full-time", "Part-time", "Contract"]
      },
      {
        "name": "location",
        "type": "text",
        "children": "Location"
      },
      {
        "name": "experience",
        "as": "select",
        "children": "Experience Level",
        "options": [
          "Entry-level (1-2 years)",
          "Mid-level (3 - 5 years)",
          "Senior-level (5+ years)"
        ]
      },
      {
        "name": "skills",
        "type": "checkbox",
        "children": "Skills Required (Select up to 3)",
        "max": "3",
        "options": [
          "Audio Editing",
          "Sound Design",
          "Mixing and Mastering",
          "Voiceover Talent",
          "Scriptwriting",
          "Music Composition",
          "Podcast Hosting",
          "Interviewing Skills",
          "Project Management",
          "Social Media Marketing",
          "SEO for Podcasts",
          "Content Marketing",
          "Ad Copywriting",
          "Sponsorship Sales",
          "Audience Analytics",
          "Video Production",
          "Filming",
          "Video Editing",
          "Commercial Partnerships",
          "Advertising Sales",
          "Brand Strategy",
          "Marketing Analytics"
        ]
      },
      {
        "name": "education",
        "type": "text",
        "children": "Education Requirements"
      },
      { "name": "salary", "type": "text", "children": "Salary/Rate" },
      {
        "name": "terms",
        "as": "select",
        "children": "Payment Terms",
        "options": ["Hourly", "Per Project", "Salary", "Other"]
      },
      {
        "name": "benefits",
        "as": "textarea",
        "children": "Benefits Offered"
      },
      {
        "name": "deadline",
        "type": "date",
        "children": "Application Deadline"
      },
      {
        "name": "applicationInstructions",
        "children": "Application Instruction (optional)",
        "description": "This is what creators will see when filling in an application form"
      }
    ]
  },
  "pitch": {
    "label": "Pitch",
    "description": "Invite creators to pitch for commissions, grants, competitions, or radio segments. Discover unique ideas and innovative content.",
    "fields": [
      { "name": "title", "type": "text", "children": "Project Title" },
      {
        "name": "description",
        "as": "textarea",
        "children": "Description",
        "description": "Please describe your intended audience. Include any specific details about who you are aiming to reach with your content."
      },
      {
        "name": "targetAudience",
        "type": "checkbox",
        "children": "Target Audience Characteristics",
        "options": [
          {
            "title": "Age Group:",
            "categories": ["18-24", "25-34", "35-44", "45-54", "55-64", "65+"]
          },
          {
            "title": "Gender",
            "categories": ["Male", "Female", "Non-Binary", "Prefer not to say"]
          },
          {
            "title": "Interests",
            "max": "3",
            "categories": [
              "Technology & Gadgets",
              "Health & Fitness",
              "Finance & Investing",
              "Entertainment (Movies, TV, Music)",
              "Education & Learning",
              "Travel & Adventure",
              "Food & Cooking",
              "Sports & Outdoor Activities",
              "Fashion & Beauty",
              "Art & Design",
              "Science & Nature",
              "Home & Garden",
              "Parenting & Family",
              "Gaming & Esports",
              "Cars & Motorcycles",
              "History & Culture",
              "Politics & Current Events",
              "Literature & Books",
              "Personal Development",
              "Social Justice & Activism",
              "Spiritulality & Religion",
              "Environmental Issues",
              "Business & Entrepreneurship",
              "Relationships & Dating",
              "Mental Health & Wellness",
              "Hobbies & Crafts",
              "Pet Care & Animal Lovers",
              "DIY & Home Improvement",
              "Other"
            ]
          }
        ]
      },
      {
        "name": "contentDuration",
        "type": "text",
        "placeholder": "e.g. 30 minutes, 1 hour",
        "children": "Expected Duration of Content"
      },
      {
        "name": "contentType",
        "as": "select",
        "children": "Type of Content",
        "options": [
          "One-off episode",
          "Limited Series",
          "Ongoing Series",
          "Always On (daily/weekly show)"
        ]
      },
      {
        "name": "budget",
        "type": "text",
        "children": "Budget for Pitch"
      },
      {
        "name": "deadline",
        "type": "date",
        "children": "Application Deadline"
      },
      {
        "name": "keyMessage",
        "children": "Key Message or Theme"
      },
      {
        "name": "applicationInstructions",
        "children": "Application Instruction (optional)",
        "description": "This is what creators will see when filling in an application form"
      }
    ]
  },
  "campaign": {
    "label": "Advertising Campaign",
    "description": "Launch marketing campaigns with top audio creators. Connect your brand with engaging and diverse voices to amplify your message.",
    "fields": [
      { "name": "title", "type": "text", "children": "Title" },
      { "name": "description", "as": "textarea", "children": "Description" },
      {
        "name": "targetAudience",
        "as": "textarea",
        "children": "Target Audience",
        "description": "Please describe your target audience. Include any specific details about who you are aiming to reach with your ad campaign."
      },
      {
        "name": "targetDemographic",
        "type": "checkbox",
        "children": "Target Demographics (Select up to 3)",
        "max": "3",
        "options": [
          {
            "title": "Age Group:",
            "categories": ["18-24", "25-34", "35-44", "45-54", "55-64", "65+"]
          },
          {
            "title": "Gender",
            "categories": ["Male", "Female", "Non-Binary", "Prefer not to say"]
          },
          {
            "title": "Income Level",
            "categories": [
              "Less than £20,000",
              "£20,000 - £40,000",
              "£40,000 - £60,000",
              "£60,000 - £80,000",
              "More than £80,000"
            ]
          },
          {
            "title": "Education Level",
            "categories": [
              "High School or Equivalent",
              "Some College",
              "Bachelor's Degree",
              "Master's Degree",
              "Doctorate"
            ]
          },
          {
            "title": "Geographic Location",
            "categories": [
              "North America",
              "South America",
              "Europe",
              "Asia",
              "Africa",
              "Oceania"
            ]
          },
          {
            "title": "Ethnicity",
            "categories": [
              "African",
              "Asian",
              "Caucasian",
              "Hispanic",
              "Native American",
              "Pacific Islander",
              "Mixed Ethnicity",
              "Prefer not to say"
            ]
          },
          {
            "title": "Interests",
            "categories": [
              "Technology and Gadgets",
              "Health and Fitness",
              "Finance and Investing",
              "Entertainment (Movies, TV, Music)",
              "Education and Learning",
              "Travel and Adventure",
              "Food and Cooking",
              "Sports and Outdoor Activities",
              "Fashion and Beauty",
              "Art and Design",
              "Science and Nature",
              "Home and Garden",
              "Parenting and Family",
              "Gaming and Esports",
              "Cars and Motorcycles",
              "History and Culture",
              "Politics and Current Events",
              "Literature and Books",
              "Personal Development",
              "Social Justice and Activism",
              "Spiritulality and Religion",
              "Environmental Issues",
              "Business and Entrepreneurship",
              "Relationships and Dating",
              "Mental Health and Wellness",
              "Hobbies and Crafts",
              "Pet Care and Animal Lovers",
              "DIY and Home Improvement",
              "Other"
            ]
          }
        ]
      },
      {
        "name": "adType",
        "as": "select",
        "children": "Ad Type",
        "options": ["Host-read Ad", "Pre-recorded Ad", "Sponsorship", "Other"]
      },
      {
        "name": "length",
        "as": "select",
        "children": "Ad Length",
        "options": [
          "15 seconds",
          "30 seconds",
          "60 seconds",
          "90 seconds",
          "Full episode",
          "Other"
        ]
      },
      {
        "name": "budget",
        "type": "text",
        "children": "Budget for Ad Campaign"
      },
      {
        "name": "startDate",
        "type": "date",
        "children": "Campaign Start Date"
      },
      { "name": "endDate", "type": "date", "children": "Campaign End Date" },
      {
        "name": "applicationInstructions",
        "children": "Application Instruction (optional)",
        "description": "This is what creators will see when filling in an application form"
      }
    ]
  }
}
