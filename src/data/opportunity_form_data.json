      {
        "name": "length",
        "as": "select",
        "children": "Ad Length",
        "options": [
          "15 seconds",
          "30 seconds",
          "60 seconds",
          "90 seconds",
          "Full episode",
          "Other"
        ]
      },
      {
        "name": "budget",
        "type": "text",
        "children": "Budget for Ad Campaign"
      },
      {
        "name": "start_date",
        "type": "date",
        "children": "Campaign Start Date"
      },
      { "name": "end_date", "type": "date", "children": "Campaign End Date" },
      {
        "name": "application_instructions",
        "as": "textarea",
        "children": "Application Instruction (optional)",
        "description": "This is what creators will see when filling in an application form"
      }
    ]
  }
