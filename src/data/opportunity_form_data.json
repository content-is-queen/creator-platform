{
  "job": {
    "label": "Job",
    "description": "A piece of work, especially a specific task done as part of the routine of one's occupation or for an agreed price",
    "fields": [
      {
        "name": "title",
        "type": "text",
        "children": "Title"
      },
      {
        "name": "description",
        "as": "textarea",
        "children": "Description"
      },
      {
        "name": "category",
        "as": "select",
        "options": [
          "Podcast Production",
          "Audio Editing",
          "Voiceover",
          "Scriptwriting",
          "Sound Design",
          "Music Composition",
          "Podcast Advertising",
          "Other"
        ],
        "children": "Category"
      },
      {
        "name": "contract_type",
        "as": "select",
        "children": "Contract Type",
        "options": ["Freelance", "Full-time", "Part-time", "Contract"]
      },
      {
        "name": "location",
        "type": "text",
        "children": "Location"
      },
      {
        "name": "company",
        "type": "text",
        "children": "Company Name"
      },
      {
        "name": "company_website",
        "type": "url",
        "children": "Company Website"
      },
      {
        "name": "company_description",
        "as": "textarea",
        "children": "Company Description"
      },
      {
        "name": "company_contact_name",
        "type": "text",
        "children": "Contact Name"
      },
      {
        "name": "company_contact_email",
        "type": "email",
        "children": "Contact Email"
      },
      {
        "name": "company_contact_tel",
        "type": "tel",
        "children": "Contact Number"
      },
      {
        "name": "experience",
        "as": "select",
        "children": "Experience Level",
        "options": [
          "Entry-level (1-2 years)",
          "Mid-level (3 - 5 years)",
          "Senior-level (5+ years)"
        ]
      },
      {
        "name": "skills",
        "type": "checkbox",
        "children": "Skills Required (Choose up to 3)",
        "max": "3",
        "options": [
          "Audio Editing",
          "Sound Design",
          "Mixing and Mastering",
          "Voiceover Talent",
          "Scriptwriting",
          "Music Composition",
          "Podcast Hosting",
          "Interviewing Skills",
          "Project Management",
          "Social Media Marketing",
          "SEO for Podcasts",
          "Content Marketing",
          "Ad Copywriting",
          "Sponsorship Sales",
          "Audience Analytics",
          "Video Production",
          "Filming",
          "Video Editing",
          "Commercial Partnerships",
          "Advertising Sales",
          "Brand Strategy",
          "Marketing Analytics"
        ]
      },
      {
        "name": "education",
        "type": "text",
        "children": "Education Requirements"
      },
      { "name": "salary", "type": "text", "children": "Salary/Rate" },
      {
        "name": "terms",
        "as": "select",
        "children": "Payment Terms",
        "options": ["Hourly", "Per Project", "Salary", "Other"]
      },
      {
        "name": "benefits",
        "as": "textarea",
        "children": "Benefits Offered"
      },
      {
        "name": "deadline",
        "type": "date",
        "children": "Application Deadline"
      },
      {
        "name": "application_instructions",
        "as": "textarea",
        "children": "Application Instruction (optional)",
        "description": "This is what creators will see when filling in an application form"
      }
    ]
  },
  "pitch": {
    "label": "Pitch",
    "description": "An introductory presentation that provides a quick summary of yourself.",
    "fields": [
      { "name": "title", "type": "text", "children": "Project Title" },
      {
        "name": "description",
        "as": "textarea",
        "children": "Description",
        "description": "Please describe your intended audience. Include any specific details about who you are aiming to reach with your content."
      },
      {
        "name": "target",
        "type": "checkbox",
        "children": "Target Audience Characteristics (Choose up to 3)",
        "max": "3",
        "options": [
          {
            "title": "Age Group:",
            "categories": ["18-24", "25-34", "35-44", "45-54", "55-64", "65+"]
          },
          {
            "title": "Gender",
            "categories": ["Male", "Female", "Non-Binary", "Prefer not to say"]
          },
          {
            "title": "Interests",
            "categories": [
              "Technology and Gadgets",
              "Health and Fitness",
              "Finance and Investing",
              "Entertainment (Movies, TV, Music)",
              "Education and Learning",
              "Travel and Adventure",
              "Food and Cooking",
              "Sports and Outdoor Activities",
              "Fashion and Beauty",
              "Art and Design",
              "Science and Nature",
              "Home and Garden",
              "Parenting and Family",
              "Gaming and Esports",
              "Cars and Motorcycles",
              "History and Culture",
              "Politics and Current Events",
              "Literature and Books",
              "Personal Development",
              "Social Justice and Activism",
              "Spiritulality and Religion",
              "Environmental Issues",
              "Business and Entrepreneurship",
              "Relationships and Dating",
              "Mental Health and Wellness",
              "Hobbies and Crafts",
              "Pet Care and Animal Lovers",
              "DIY and Home Improvement",
              "Other"
            ]
          }
        ]
      },
      {
        "name": "content_duration",
        "type": "text",
        "placeholder": "e.g. 30 minutes, 1 hour",
        "children": "Expected Duration of Content"
      },
      {
        "name": "content_type",
        "as": "select",
        "children": "Type of Content",
        "options": [
          "One-off episode",
          "Limited Series",
          "Ongoing Series",
          "Always On (daily/weekly show)"
        ]
      },
      {
        "name": "key_message",
        "as": "textarea",
        "children": "Key Message or Theme"
      },
      {
        "name": "application_instructions",
        "as": "textarea",
        "children": "Application Instruction (optional)",
        "description": "This is what creators will see when filling in an application form"
      }
    ]
  },
  "campaign": {
    "label": "Advertising Campaign",
